                      <%= f.check_box :hobbies, { multiple: true }, "Reading", nil %><label for="user_hobbies_reading">Reading</label>
                    </div>
                    <br />
                    <br />
                    <div class="file-field input-field">
                      <input class="file-path validate" type="text"/>
                      <div class="btn">
                        <span>File</span>
                        <%= f.file_field :user_photo, class: "tooltipped", data: { regex_bak: ".+", tooltip: "Please upload a photo", position: "bottom", delay: "25" }, onchange:"previewFile()" %>
                      </div>
                    </div>
                    <p>
                        <input type="checkbox" id="checkbox_terms">
                        <label for="checkbox_terms">I agree to the <a href="#">terms of use</a>.</label>
                    </p>
                    <button class="waves-effect waves-light btn-large z-depth-0 z-depth-1-hover" id="btn-confirm-dialog">Sign Up</button>
                </div>
