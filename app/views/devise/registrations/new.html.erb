                      <div class="col s8">
                        <div class="input-field">
                          <%= f.select :gender, { "Male" => "male", "Female" => "female" } %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s4" style="margin-top:1.5rem"><h5>Year of Joining</h5></div>
                      <div class="col s8">
                        <div class="input-field">
                            <%= f.select :year_of_joining, 20.times.collect { |p| [p+2012, p+2012] } %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col s4" style="margin-top:1.5rem"><h5>Branch</h5></div>
                      <div class="col s8">
                        <div class="input-field">
                            <%= f.select :branch, { "Biotechnology" => "BT", "Chemical" => "CHE", "Civil" => "CE", "Computer Sc" => "CSE", "Electronics" => "ECE", "Electrical" => "EE", "Information Technology"=> "IT", "Mechanical" => "ME", "Metallurgy" => "MME" } %>
                        </div>
                      </div>
                    </div>
                    <div class="input-field"><i class="fa fa-graduation-cap prefix"></i>
                      <%= f.text_field :roll_no, autocomplete: "off", class: "tooltipped", data: { regex: "^[0-9]{2}-[A-Z]{2,}-[0-9]+$", tooltip: "Enter a valid Roll no.", position: "bottom", delay: "25" } %>
                        <label for="user_roll_no">
                          Roll Number
                        </label>
                    </div>
                    <div class="input-field"><i class="fa fa-credit-card prefix"></i>
                      <%= f.text_field :registration_no, autocomplete: "off", class: "tooltipped", data: { regex: "^[0-9]{8,}$", tooltip: "Enter a valid registration no.", position: "bottom", delay: "25" } %>
                        <label for="user_registration_no">
                          Registration Number
                        </label>
                    </div>
                    <div class="input-field"><i class="fa fa-bar-chart prefix"></i>
                      <%= f.text_field :cgpa, autocomplete: "off", class: "tooltipped", data: { regex: "^[0-9]{1,2}[\\.]{0,1}[0-9]*$", tooltip: "Enter a valid CGPA", position: "bottom", delay: "25" } %>
                        <label for="user_cgpa">
                          CGPA
                        </label>
                    </div>
                    <div class="input-field"><i class="fa fa-info prefix"></i>
                      <%= f.text_field :rank_aieee, autocomplete: "off", class: "tooltipped", data: { regex: "^[0-9]+$", tooltip: "Enter a valid aieee rank", position: "bottom", delay: "25" } %>
                        <label for="user_rank_aieee">
                          AIEEE Rank
                        </label>
                    </div>
                    <div class="input-field"><i class="fa fa-institution prefix"></i>
                      <%= f.text_field :school, autocomplete: "off", class: "tooltipped", data: { regex: ".+", tooltip: "Enter a valid school name", position: "bottom", delay: "25" } %>
                        <label for="user_school">
                          School Name
                        </label>
                    </div>
                    <div class="input-field"><i class="fa fa-phone prefix"></i>
                      <%= f.text_field :contact_number, class: "tooltipped", data: { regex: "^[0-9]{10}$", tooltip: "Enter a valid contact number", position: "bottom", delay: "25" } %>
                        <label for="user_contact_number">Contact Number</label>
                    </div>
                    <div class="input-field"><i class="fa fa-home prefix"></i>
                      <%= f.text_area :address, class: "materialize-textarea tooltipped", data: { regex: ".+", tooltip: "Please enter a valid address", position: "bottom", delay: "25" } %>
                        <label for="user_address">Address</label>
                    </div>
                    <div class="input-field">
                      <h5>Hobbies</h5>
                      <%= f.check_box :hobbies, { multiple: true }, "Sports", nil %><label for="user_hobbies_sports">Sports</label>
